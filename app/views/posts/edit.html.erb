<div class="posts-html">
  <h2>スケジュール編集</h2>

  <%= render "shared/error" %>

  <%= form_for @post do |f| %>
    <table class="table-edit">
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td class="input-position"><%= f.text_field :title, class: "input-width input-height" %></td>
      </tr>
      <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td class="input-position">
          <%= f.text_field :start_date, class: "input-width input-height", type: "date" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :last_date ,"終了日" %></th>
        <td class="input-position">
          <%= f.text_field :last_date, class: "input-width input-height", type: "date" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :all_day ,"終日" %></th>
        <td class="all_day-position">
          <% if @post.all_day == "on" %>
            <%= f.text_field :all_day, type: "checkbox", checked: "checked" %>
          <% else %>
            <%= f.text_field :all_day, type: "checkbox" %>
          <% end %>
          <p>終日の場合はテェックを入れます</p>
        </td>
      </tr>
      <tr>
        <th><%= f.label :memo_contents ,"スケジュールメモ" %></th>
        <td class="memo"><%= f.text_area :memo_contents, class: "input-width" %></td>
      </tr>
    </table>

    <ul class="register">
      <li><%= f.submit "スケジュールの編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  <% end %>
</div>
